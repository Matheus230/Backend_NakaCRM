# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nakacrmdm
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Generate a secure secret key using: openssl rand -hex 64
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# For Gmail, generate an app password at: https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# =============================================================================
# GOOGLE OAUTH2 CONFIGURATION
# =============================================================================
# Configure at: https://console.cloud.google.com/apis/credentials
google.oauth2.client-id=your_google_client_id
google.oauth2.client-secret=your_google_client_secret
google.oauth2.redirect-uri=http://localhost:8080/api/oauth2/callback

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# SPRING PROFILE
# =============================================================================
SPRING_PROFILES_ACTIVE=dev